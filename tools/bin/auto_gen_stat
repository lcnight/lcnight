#! /bin/bash

DB_HOST=10.1.1.44
DB_USER=root
DB_PASS=ta0mee
CFG_TK=stat
SQL_TK=add_report
AUTH_TK=auth
XML_EX=.xml
SQL_EX=.sql
FLAG=''

if [[ $# == 2  ]]; then
    if [[ "$0" == "-h" ]]; then
        echo "Usage: `basename $0` [-h|flag]"
        exit 0;
    fi
    FLAG=".$1"
fi


str_cmd="./gen_stat_item.php -h$DB_HOST -u$DB_USER -o$SQL_TK$FLAG$SQL_EX -m$AUTH_TK$FLAG$XML_EX -x$CFG_TK$FLAG$XML_EX"
echo -e "run command:\n\t$str_cmd"
#echo "$DB_PASS" | ./gen_stat_item.php -h$DB_HOST -u$DB_USER -o$SQL_TK$FLAG$SQL_EX -m$AUTH_TK$FLAG$XML_EX -x$CFG_TK$FLAG$XML_EX 2>/dev/null
echo "$DB_PASS" | ./gen_stat_item.php -h$DB_HOST -u$DB_USER -o$SQL_TK$FLAG$SQL_EX -m$AUTH_TK$FLAG$XML_EX -x$CFG_TK$FLAG$XML_EX 
